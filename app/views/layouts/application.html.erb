<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if request.original_fullpath == '/' %>">
            <a href="/" class="navbarLink">Home</a>
          </li>
          <li class="<%= 'active' if request.original_fullpath == '/education' %>">
            <a href="/education" class="navbarLink">Education</a>
          </li>
          <li class="<%= 'active' if request.original_fullpath == '/work' %>">
            <a href="/work" class="navbarLink">Work Experience</a>
          </li>
          <li class="<%= 'active' if request.original_fullpath == '/projects' %>">
            <a href="/projects" class="navbarLink">Projects</a>
          </li>
          <li class="<%= 'active' if request.original_fullpath == '/aboutme' %>">
            <a href="/aboutme" class="navbarLink">About Me/Skills</a>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div id="gradient"></div>

  <%= yield %>

</body>
</html>
